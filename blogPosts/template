         <script>
             
                 $(document).ready(function() {
                    var $window = $(window);
                    var $menuToggler = $('#menuToggler');
                    var $menuItems = $('.menuItems');
                    var $logo = $('#logo');
                     
                    function checkWidth() {
                        var windowsize = $window.width();
                        if (windowsize < 480) {
                            $menuToggler.css("display", "inline");
                            $menuItems.css("display", "none");
                            $logo.css("max-width", "100rem");
                            $logo.css("width", "10rem");
                            
                        }
                    }
                    checkWidth();
                    $(window).resize(checkWidth);
                     document.getElementById("menuToggler").onclick = function () {
                        location.href = "https://gauravbhalla.co.uk/menu.html";
                    };
                });
        </script>
        
